{{> locationsNav}}

<h2 class="page-header">Add Location</h2>

<form method="POST" action="/locations/add" class="page-form">
  <input type="hidden" name="id">

  <label for="name" class="block mb-4">
    <span class="form-label">Location Name</span>
    <input
      type="text"
      id="name"
      name="name"
      placeholder="Location name"
      class="form-input">
  </label>

  <label for="description" class="block mb-4">
    <span class="form-label">Description</span>
    <textarea rows="4"
      id="description"
      name="description"
      placeholder="Location description"
      class="form-input"></textarea>
  </label>

  <button class="form-button">Add location</button>
</form>
