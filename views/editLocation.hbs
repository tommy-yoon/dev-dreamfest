{{> locationsNav}}

<h2 class="page-header">Edit Location: {{name}}</h2>

<form method="POST" action="/locations/edit" class="page-form">
  <input type="hidden" name="id" value="{{id}}">

  <label for="name" class="block mb-4">
    <span class="form-label">Location Name</span>
    <input
      type="text"
      id="name"
      name="name"
      placeholder="Location name"
      value="{{name}}"
      class="form-input">
  </label>

  <label for="description" class="block mb-4">
    <span class="form-label">Description</span>
    <textarea rows="4"
      id="description"
      name="description"
      placeholder="Location description"
      class="form-input">{{description}}</textarea>
  </label>

  <button class="form-button">Update location</button>
</form>

<form method="POST" action="/locations/delete" class="delete-event-form">
  <input type="hidden" name="id" value="{{id}}">
  <button class="delete-event-button">Delete location</button>
</form>
